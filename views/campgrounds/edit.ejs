<% layout ('layout/boilerplate') %>

    <h1>Edit Campground</h1>

    <form action="/campgrounds/<%= campground._id %>?_method=PUT" method="POST">
      <div>
          <label for="title">Title:</label>
          <input type="text" id="title" name="campground[title]" value="<%= campground.title %>"></input>
          <label for="location">Location:</label>
          <input type="text" id="location" name="campground[location]" value="<%= campground.location %>"></input>
      </div>
      <button type="submit"> Update Campground</button>
    </form>

    <button><a href="/campgrounds/<%= campground._id %>">Go back to campground</a></button>
